{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PyPDFScoreSlicer: Process PDF",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/__main__.py",
            "args": ["tests/Heublumen-Polka.pdf"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PyPDFScoreSlicer: Process PDF (Debug Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/__main__.py",
            "args": ["tests/Heublumen-Polka.pdf", "--debug"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PyPDFScoreSlicer: GUI Mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/__main__.py",
            "args": ["--gui"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PyPDFScoreSlicer: GUI Mode (Debug)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/__main__.py",
            "args": ["--gui", "--debug"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}